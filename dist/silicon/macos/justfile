# list of all recipes
help:
    @just -f {{ justfile() }} --list --unsorted

# backup dotfiles
backup:
    cp /home/vscode/.config/fish/config.fish dotfiles/fish/config.fish
    cp /home/vscode/.config/direnv/direnv.toml dotfiles/direnv/direnv.toml
    cp /home/vscode/.config/zellij/config.kdl dotfiles/zellij/config.kdl
    cp /home/vscode/.config/zellij/layouts/minimal.kdl dotfiles/zellij/layouts/minimal.kdl
    cp /home/vscode/.doom.d/config.el dotfiles/doomemacs/config.el
    cp /home/vscode/.doom.d/init.el dotfiles/doomemacs/init.el
    cp /home/vscode/.doom.d/packages.el dotfiles/doomemacs/packages.el
    rsync -a --delete /home/vscode/.doom.d/modules/lang/protobuf/ dotfiles/doomemacs/modules/lang/protobuf
    cp /home/vscode/.config/atuin/config.toml dotfiles/atuin/config.toml
    cp /home/vscode/.config/starship.toml dotfiles/starship/starship.toml

# install dotfiles
install:
    rsync -a dotfiles/bin/ /home/vscode/.local/bin
    cp dotfiles/starship/starship.toml /home/vscode/.config/starship.toml
    rsync -a dotfiles/atuin/ /home/vscode/.config/atuin
    cp dotfiles/git/gitconfig /home/vscode/.gitconfig
    rsync -a dotfiles/fish/ /home/vscode/.config/fish
    rsync -a dotfiles/direnv/ /home/vscode/.config/direnv
    rsync -a dotfiles/zellij/ /home/vscode/.config/zellij
    rsync -a dotfiles/doomemacs/ /home/vscode/.doom.d
